@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiBearKingdom.Models.Product>

<html>
<head>
    <title>GummiBearKingdom</title>
</head>
<body>
    <h1>Gummi Bear Kingdom Gummies</h1>
    <ul>
                @foreach (var listProduct in Model)
                {
                    <li>Name: @Html.DisplayFor(modelItem => listProduct.Name) @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId })@Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })</li>
        }
    </ul>

    <p>@Html.ActionLink("AddProduct", "Create")</p>
</body>
</html>